<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.halturin.dmitry.rssreader">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".app.RssApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".view.activity.FeedActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.NewsActivity"
            android:parentActivityName=".view.activity.FeedActivity"/>

        <activity
            android:name=".view.activity.BookmarksActivity"
            android:parentActivityName=".view.activity.FeedActivity"/>
    </application>

</manifest>
