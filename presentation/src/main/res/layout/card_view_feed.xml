<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:bind="http://schemas.android.com/tools">

  <data>

    <variable
      name="feedViewModel"
      type="com.khalturin.dmitriy.presentation.viewmodel.feed.FeedViewModel"
      />

    <variable
      name="newsViewModel"
      type="com.khalturin.dmitriy.presentation.viewmodel.news.NewsViewModel"
      />

  </data>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/news_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="@{() -> feedViewModel.openNews(newsViewModel.id)}">

    <include
      layout="@layout/view_news"
      app:newsViewModel="@{newsViewModel}"
      />

    <View
      android:id="@+id/news_fog"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:background="@drawable/bg_card_view_fog"
      bind:viewVisibility="@{newsViewModel.isWasRead}"
      />

  </android.support.constraint.ConstraintLayout>

</layout>
