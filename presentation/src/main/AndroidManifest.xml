<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khalturin.dmitriy.presentation">

    <application
        android:name=".RssApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".view.activity.FeedActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.NewsActivity"
            android:parentActivityName="com.khalturin.dmitriy.presentation.view.activity.FeedActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            />

        <activity
            android:name=".view.activity.BookmarksActivity"
            android:parentActivityName="com.khalturin.dmitriy.presentation.view.activity.FeedActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            />

    </application>
</manifest>
